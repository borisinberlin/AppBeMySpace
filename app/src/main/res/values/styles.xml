<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/darkBlueColor</item>

    </style>

    <style name="white_bold_text_style" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="white_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="black_bold_text_style" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkWhiteTextColor</item>
        <item name="android:gravity">center|left</item>

    </style>

    <style name="black_text_style" parent="android:Widget.TextView">
       <item name="android:textColor">@color/darkWhiteTextColor</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/left_right_margin_value</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style" parent="android:Widget.Button">
        <item name="android:background">@drawable/light_blue_button_design</item>
        <item name="android:textSize">@dimen/title_h2_textsize</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="white_button_style" parent="android:Widget.Button">
        <item name="android:background">@drawable/white_button_design</item>
        <item name="android:textColor">@color/quantum_black_100</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
