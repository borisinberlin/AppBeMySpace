<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteTextColor">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
    />

    <!-- <ScrollView
             android:layout_width="match_parent"
             android:layout_height="500dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="8dp"
             app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.0"
             app:layout_constraintVertical_bias="0.542">    </ScrollView> -->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
                android:text="NAME"
                style="@style/black_bold_text_style"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/space_name_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginRight="32dp"
                android:layout_marginEnd="32dp"/>
        <TableRow
                android:id="@+id/tableRow_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/space_name_text" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/space_name_text"
                app:layout_constraintEnd_toEndOf="@+id/space_name_text" android:background="#03A9F4"/>
        <TextView
                android:text="Address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/space_address_text"
                style="@style/black_text_style"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@+id/tableRow_1"
                app:layout_constraintTop_toBottomOf="@+id/tableRow_1" app:layout_constraintEnd_toEndOf="@+id/tableRow_1"/>
        <TableRow
                android:id="@+id/tableRow_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/space_address_text" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/space_address_text"
                app:layout_constraintEnd_toEndOf="@+id/space_address_text" android:background="#03A9F4"/>

        <TextView
                android:text="Price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/space_price_text"
                style="@style/black_bold_text_style"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/tableRow_2"
                app:layout_constraintTop_toBottomOf="@+id/tableRow_2" app:layout_constraintEnd_toEndOf="@+id/tableRow_2"/>

        <TableRow
                android:id="@+id/tableRow_3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/space_price_text" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/space_price_text"
                app:layout_constraintEnd_toEndOf="@+id/space_price_text" android:background="#03A9F4"/>


               <TextView
                android:text="Description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/space_description_text"
                style="@style/black_text_style"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/tableRow_3"
                app:layout_constraintTop_toBottomOf="@+id/tableRow_3" app:layout_constraintEnd_toEndOf="@+id/tableRow_3"/>

        <TableRow
                android:id="@+id/tableRow_4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/space_description_text" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/space_description_text"
                app:layout_constraintEnd_toEndOf="@+id/space_description_text" android:background="#03A9F4"/>

        <TextView
                android:text="Description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/space_description_text"
                style="@style/black_text_style"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/tableRow_3"
                app:layout_constraintTop_toBottomOf="@+id/tableRow_3" app:layout_constraintEnd_toEndOf="@+id/tableRow_3"/>

        <TableRow
                android:id="@+id/tableRow_4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@+id/space_description_text" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/space_description_text"
                app:layout_constraintEnd_toEndOf="@+id/space_description_text" android:background="#03A9F4"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>